{
    "name": "novi-devops-2025",
    "version": "1.0.4",
    "description": "Node.js TypeScript API with status endpoint",
    "main": "dist/index.js",
    "scripts": {
        "clean": "rm -rf node_modules dist coverage",
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "lint": "eslint 'src/**/*.ts' --max-warnings=0",
        "lint:fix": "eslint 'src/**/*.ts' --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "ci": "npm run clean && npm ci && npm run build && npm run docker:build",
        "docker:build": "docker build -t novi-devops-2025-app:latest .",
        "docker:run": "docker run -d -p 3000:3000 --name novi-devops-2025-app novi-devops-2025-app:latest",
        "docker:stop": "docker stop novi-devops-2025-app && docker rm novi-devops-2025-app",
        "docker:test": "docker run --rm -p 3000:3000 --name test-container novi-devops-2025-app:latest & sleep 10 && curl -f http://localhost:3000/health && curl -f http://localhost:3000/api/info && docker stop test-container",
        "compose:up": "docker compose up -d",
        "compose:down": "docker compose down",
        "compose:logs": "docker compose logs -f"
    },
    "keywords": [
        "api",
        "typescript",
        "express",
        "status"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.18.2",
        "prom-client": "^15.1.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.10.6",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^8.56.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
